<?xml version="1.0" encoding="UTF-8"?>

    <androidx.core.widget.NestedScrollView
    tools:context=".fragments.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/home_layout">

    <com.denzcoskun.imageslider.ImageSlider
        android:layout_height="220dp"
        android:layout_width="match_parent"
        android:id="@+id/image_slider"
        app:iss_period="1000"
        app:iss_delay="0"
        app:iss_auto_cycle="true"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amethysta"
            android:text="Category"
            android:textSize="21sp"
            android:textStyle="bold" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/category_see_all"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="See All"
        android:fontFamily="@font/amethysta"
        android:layout_weight="1"
        android:textColor="@color/pink"
        android:gravity="end"
        android:layout_marginRight="8dp"/>

</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="90dp"
        android:layout_width="wrap_content"
        android:id="@+id/rec_category"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"/>


    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="6dp"
        android:layout_margin="5dp">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/new_product_name"
        android:layout_marginLeft="9dp"
        android:textStyle="bold"
        android:textSize="21sp"
        android:text="New Products"
        android:fontFamily="@font/amethysta"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="We provide best products."
        android:layout_below="@+id/new_product_name"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/newProducts_see_all"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="See All"
        android:fontFamily="@font/amethysta"
        android:textColor="@color/pink"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/new_product_rec"
        android:layout_marginTop="6dp"
        android:layout_margin="7dp"
        android:padding="5dp"/>

</LinearLayout>

</androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/popular_products"
        android:layout_marginLeft="9dp"
        android:textStyle="bold"
        android:textSize="21sp"
        android:text="Popular Products"
        android:fontFamily="@font/amethysta"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="We provide best products."
        android:layout_below="@+id/popular_products"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/popular_see_all"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="See All"
        android:fontFamily="@font/amethysta"
        android:textColor="@color/pink"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/popular_rec"
        android:layout_marginTop="6dp"
        android:layout_margin="7dp"
        android:padding="5dp"
        android:layout_gravity="center"/>

</LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>